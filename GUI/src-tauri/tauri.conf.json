{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ninja",
  "version": "0.1.0",
  "identifier": "com.tunafysh.ninja",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../out"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ninja",
        "label": "main",
        "minWidth": 912,
        "minHeight": 644,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    },    "externalBin": [
     "binaries/shurikenctl"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "targets": ["msi", "dmg", "nsis", "deb", "rpm", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link":{
      "desktop" : {
        "schemes": ["shurikenctl"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDRTAyRkNGRkIzMDlDNDYKUldSR25ERDd6eS9nTEViRnltVWNkdG9LaDBWUjMrNGpMczZnUlQwZXp4K0d0dUV5MzFLVDY1R1UK",
      "endpoints": [""]
    }
  }
}
